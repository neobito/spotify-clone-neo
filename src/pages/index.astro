---
import Layout from '../layouts/Layout.astro';
import PlayListItemCard from '@/components/PlayListItemCard.astro'
import { playlists } from '@/lib/data';

---

<Layout title="Spotify Clone">
<div 
    id="playlist-container" 
    class="relative transition-all duration-1000 bg-green-600">

    <div class="relative z-10 px-6">
        
       <h1 class="text-4xl">Buenos dias</h1>
       {
playlists.map(playlists => <PlayListItemCard playlist={playlists} />)
       }
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900" via-zinc-900/80></div>
</div>
</Layout>
	


